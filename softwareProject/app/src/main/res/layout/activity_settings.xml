<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical"
    tools:context=".Profile.SettingsActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Person Information"
        android:textStyle="bold"
        android:textColor="#000"

        android:textSize="25sp"/>

<FrameLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center">
    <ImageView
        android:id="@+id/userProfile_iv"
        android:layout_width="220dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
       android:layout_marginTop="20dp"
        android:src="@drawable/user"
        />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_interface"
        android:layout_gravity="bottom"
        android:background="#fefefe"/>
</FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:background="#F9F9F9"
        android:layout_gravity="center"
        >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name Setting"
            android:onClick="goToNameSetting"
            android:textColor="#4D00EA"
            android:background="#fefefefe"
            android:textSize="25sp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone Number Setting"
            android:background="#fff"
            android:textColor="#4D00EA"
            android:onClick="goToPhoneNumberSetting"
            android:textSize="25sp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password Setting"
            android:onClick="goToPasswordSetting"
            android:textColor="#4D00EA"
            android:background="#fff"
            android:textSize="25sp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email Setting"
            android:onClick="goToEmailSetting"
            android:textColor="#4D00EA"
            android:background="#F9F9F9"
            android:textSize="25sp"
            tools:ignore="OnClick" />
    </LinearLayout>


</LinearLayout>